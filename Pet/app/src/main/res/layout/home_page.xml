<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_gravity="top"
        android:paddingLeft="-15dp"
        android:paddingTop="-1dp"
        android:paddingRight="-15dp"
        app:srcCompat="@drawable/footer" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="206dp"
        android:layout_height="60dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="-10dp"
        android:paddingTop="20dp"
        app:srcCompat="@drawable/name" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="60dp"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/message" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        app:srcCompat="@drawable/poster"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/ad"
        android:layout_width="162dp"
        android:layout_height="60dp"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="135dp"
        app:srcCompat="@drawable/image_button" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="280dp"
        app:srcCompat="@drawable/slider" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="320dp"
        app:srcCompat="@drawable/categories" />


    <ImageView
        android:id="@+id/catButton"
        android:layout_width="111dp"
        android:layout_height="87dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="385dp"
        app:srcCompat="@drawable/cat"
        android:clickable="true"/>


    <TextView
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="470dp"
        android:text="Cat"
        android:textSize="17dp"/>

    <ImageView
        android:id="@+id/rabbit"
        android:layout_width="90dp"
        android:layout_height="77dp"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="387dp"
        app:srcCompat="@drawable/rabbit" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="41dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="470dp"
        android:text="Rabbit"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/dogButton"
        android:layout_width="109dp"
        android:layout_height="84dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="385dp"
        app:srcCompat="@drawable/dog"
        android:clickable="true"/>

    <TextView
        android:layout_width="85dp"
        android:layout_height="41dp"
        android:layout_marginLeft="327dp"
        android:layout_marginTop="470dp"
        android:text="Dog"
        android:textSize="17dp" />





    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grid"
        android:numColumns="2"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-18dp"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/footer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/home"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/heart"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart_button"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/profile"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/add"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/notification"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/notification" />
    </LinearLayout>


</RelativeLayout>











